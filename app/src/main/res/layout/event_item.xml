<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/relativeLayout"
    android:background="@drawable/white_bg"
    android:elevation="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/rv_eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
       android:textColor="@color/black"
        android:fontFamily="@font/arima_madurai_bold"

        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Wedding cermony"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/decorationImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        app:srcCompat="@drawable/decorate" />

    <TextView
        android:id="@+id/rv_decorationeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_eventName"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"

        android:layout_toRightOf="@+id/profile_image"
        android:text="Flower Decoration" />

    <TextView
        android:id="@+id/money_sym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="30dp"

        android:text="Rs. "
        android:textSize="15dp" />

    <TextView
        android:id="@+id/money_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="180dp"
        android:text="500" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="235dp"
        android:text="-" />

    <TextView
        android:id="@+id/money_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="260dp"
        android:text="1500" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="220dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="40dp"
       android:background="@color/white"
        android:text="Update"
        android:textColor="@color/blue"
        android:elevation="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        android:text="Delete"
        android:textColor="@color/blue"
        android:elevation="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="115dp"
        android:background="@color/light_gray"  />
</RelativeLayout>