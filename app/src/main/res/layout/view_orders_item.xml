<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/relativeLayout"

    android:elevation="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/voi_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/alegreya_sc_bold"
        android:text="Purvi Bethu"
        android:textSize="15dp"

        android:textStyle="bold" />

    <ImageView
        android:id="@+id/voi_decorationImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        app:srcCompat="@drawable/decorate" />


    <TextView
        android:id="@+id/voi_eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:fontFamily="@font/athiti_semibold"
        android:text="Baby Shower"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/voi_decorationeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:fontFamily="@font/athiti_medium"
        android:text="Balloon Decoration"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/voi_money_sym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="30dp"
        android:text="Rs. "
        android:textSize="15dp" />

    <TextView
        android:id="@+id/voi_money_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="180dp"
        android:text="500" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="235dp"
        android:text="-" />

    <TextView
        android:id="@+id/voi_money_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="260dp"
        android:text="1500" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accept_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="260dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:text="Accept"
        android:textColor="@color/blue"
        android:elevation="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accepted_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="260dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:text="Accepted"
        android:textColor="@color/blue"
        android:elevation="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="150dp"
       android:background="@color/white"
        android:text="View"
        android:textColor="@color/blue"
        android:elevation="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reject_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="280dp"
        android:background="@color/white"
        android:text="Reject"
        android:textColor="@color/blue"
        android:elevation="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="280dp"
        android:background="@color/white"
        android:text="Delete"
        android:textColor="@color/blue"
        android:elevation="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="10dp"
        android:background="@color/light_gray" />
</RelativeLayout>
