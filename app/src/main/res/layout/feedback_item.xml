<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/relativeLayout"
    android:background="@drawable/white_bg"
    android:elevation="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Name :"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fb_item_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Purvi Bethu"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/abc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:text="Mobile :"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fb_item_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:text="9925299814"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fb_item_Email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:text="Email :"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/fb_item_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:text="abc123@gmail.com"
        android:textStyle="bold"
        android:textSize="15dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_feedback_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="120dp"
        android:background="@color/white"
        android:text="View Details"
        android:textColor="@color/blue"
        android:elevation="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="120dp"
        android:background="@color/light_gray" />
</RelativeLayout>
